# Tunly Consolidated Configuration Example
# ========================================

# --- BACKEND (tunly-server) ---
# Port for the Rust server (default: 8080)
PORT=8080

# (Optional) Fixed token for the server. 
# TUNLY_TOKEN=mysecret

# (Optional) Custom JWT secret for token signing.
# TUNLY_JWT_SECRET=some_random_secret_string_here

# (Optional) Secret key to restrict /token access to your frontend ONLY.
# If set, the frontend must send this key in 'X-Internal-Key' header.
TUNLY_INTERNAL_KEY=generate_a_long_random_string_here

# --- FRONTEND (Next.js) ---
# Point this to your backend server URL
BACKEND_BASE_URL=http://localhost:8080
